@using Inventory.Models
@model Product

<div class="container mt-2 mb-5" style="max-width: 700px;">
    <!-- reduced width -->
    <div class="card shadow-sm border-0 rounded-3">
        <!-- less shadow, tighter rounding -->
        <div class="card-header bg-warning bg-gradient py-2 rounded-top-3">
            <!-- less padding -->
            <h4 class="text-white text-center mb-0">Edit Product</h4> <!-- smaller heading -->
        </div>

        <div class="card-body p-3">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-2">
                    <label asp-for="Title" class="form-label fw-semibold">Title</label>
                    <input asp-for="Title" class="form-control form-control-sm rounded-2" placeholder="Enter title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Author" class="form-label fw-semibold">Author</label>
                    <input asp-for="Author" class="form-control form-control-sm rounded-2" placeholder="Enter author" />
                    <span asp-validation-for="Author" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="ISBN" class="form-label fw-semibold">ISBN</label>
                    <input asp-for="ISBN" class="form-control form-control-sm rounded-2" placeholder="Enter ISBN" />
                    <span asp-validation-for="ISBN" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="listPrice" class="form-label fw-semibold">List Price</label>
                    <input asp-for="listPrice" class="form-control form-control-sm rounded-2" placeholder="Enter list price" />
                    <span asp-validation-for="listPrice" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Price" class="form-label fw-semibold">Price (1-50)</label>
                    <input asp-for="Price" class="form-control form-control-sm rounded-2" placeholder="Enter price for 1 to 50 units" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Price50" class="form-label fw-semibold">Price (50+)</label>
                    <input asp-for="Price50" class="form-control form-control-sm rounded-2" placeholder="Enter price for 50+ units" />
                    <span asp-validation-for="Price50" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Price100" class="form-label fw-semibold">Price (100+)</label>
                    <input asp-for="Price100" class="form-control form-control-sm rounded-2" placeholder="Enter price for 100+ units" />
                    <span asp-validation-for="Price100" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control form-control-sm rounded-2" rows="3" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6 mb-2">
                        <button type="submit" class="btn btn-warning w-100 py-1 fw-bold text-white rounded-2">Update</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary w-100 py-1 fw-bold rounded-2">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
