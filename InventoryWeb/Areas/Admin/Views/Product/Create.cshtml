@using Inventory.Models
@model Product

<div class="container mt-2">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary bg-gradient py-3 rounded-top-4">
            <h2 class="text-white text-center mb-0">Create New Product</h2>
        </div>

        <div class="card-body p-3">
            <form method="post" asp-action="Create">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control rounded-3 shadow-sm" placeholder="Enter title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Author" class="form-label fw-semibold"></label>
                    <input asp-for="Author" class="form-control rounded-3 shadow-sm" placeholder="Enter author" />
                    <span asp-validation-for="Author" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ISBN" class="form-label fw-semibold"></label>
                    <input asp-for="ISBN" class="form-control rounded-3 shadow-sm" placeholder="Enter ISBN" />
                    <span asp-validation-for="ISBN" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="listPrice" class="form-label fw-semibold"></label>
                    <input asp-for="listPrice" class="form-control rounded-3 shadow-sm" placeholder="Enter list price" />
                    <span asp-validation-for="listPrice" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control rounded-3 shadow-sm" placeholder="Enter price 1 to 50" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price50" class="form-label fw-semibold"></label>
                    <input asp-for="Price50" class="form-control rounded-3 shadow-sm" placeholder="Enter price 50+" />
                    <span asp-validation-for="Price50" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price100" class="form-label fw-semibold"></label>
                    <input asp-for="Price100" class="form-control rounded-3 shadow-sm" placeholder="Enter price 100+" />
                    <span asp-validation-for="Price100" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="3" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold rounded-3">Submit</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary w-100 py-2 fw-bold rounded-3">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
