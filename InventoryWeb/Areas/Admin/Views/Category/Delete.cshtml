@using Inventory.Models
@model Category

<div class="container mt-2">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger bg-gradient py-3 rounded-top-4">
            <h2 class="text-white text-center mb-0">Delete Category</h2>
        </div>

        <div class="card-body p-3">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-semibold">Category Name</label>
                    <input asp-for="Name" class="form-control form-control-lg rounded-3 shadow-sm" readonly />
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="4" readonly></textarea>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <button type="submit" class="btn btn-danger w-100 py-2 fw-bold rounded-3">Delete</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary w-100 py-2 fw-bold rounded-3">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
