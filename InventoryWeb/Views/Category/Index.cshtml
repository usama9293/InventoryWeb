@model List<Category>

<div class="container">
    <div class="row pt-5">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary "> <i class="bi bi-patch-plus-fill"></i>Add New Category</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Descritpion
        </th>
       
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.Description</td>
        </tr>
        }
    </tbody>

</table>
</div>